<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <ImageView
        android:id="@+id/imageViewScanner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/qr_code_scanner"
        app:layout_constraintBottom_toTopOf="@+id/imageViewGenerator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Scanner"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewScanner"
        app:layout_constraintStart_toStartOf="@+id/imageViewScanner"
        app:layout_constraintTop_toBottomOf="@+id/imageViewScanner" />

    <ImageView
        android:id="@+id/imageViewGenerator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/qr_code_generator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewScanner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generator"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGenerator"
        app:layout_constraintStart_toStartOf="@+id/imageViewGenerator"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGenerator" />
</androidx.constraintlayout.widget.ConstraintLayout>